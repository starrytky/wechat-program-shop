/* pages/detail/detail.wxss */
.swiper-box {
  position: relative;
}
.swiper-box swiper {
  height: 750rpx;
}

.swiper-box swiper image{
  width: 100%;
  height: 100%;
}

.swiper-box .tips{
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  background-color:  #333;
  opacity: .6;
  padding: 0 20rpx;
  border-radius: 20rpx;
}

.swiper-box .tips text {
  color: #fff;
}

.goods-info {
  padding: 30rpx;
}

.goods-info .price {
  font-size: 32rpx;
}

.goods-info .share-box {
  display: flex;
}

.goods-info .share-box .title{
  margin-top: 20rpx;
}

.goods-info .share-box .icon-share{
  font-size: 60rpx;
}

.goods-info .share-box .share {
  padding: 8rpx 0;
  width: 100rpx;
  background: transparent;
  font-weight: normal;
}

.address {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  background: #f5f5f5;
  font-size: 32rpx;
  padding: 0 20rpx;
}
.address .icon-map {
  margin: 0 10rpx;
}

.details-box{
  padding: 20rpx 20rpx 110rpx;
}

.details-box image{
  vertical-align: middle;
  width: 100%;
}

.bottom-nav{
  width: 100%;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
}

.bottom-nav .small {
  flex: 0.5;
  text-align: center;
  font-size: 28rpx;
  padding: 10rpx 0;
}
.bottom-nav .add-cart,.bottom-nav .btn-buy{
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
  background-color: #ffa900;
  color: #fff;
}
.bottom-nav .btn-buy{
  background-color: #fe7302;
}
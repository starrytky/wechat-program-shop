/* pages/home/home.wxss */
.swiper-box {
  padding: 30rpx;
}

.swiper-box swiper {
  height: 460rpx;
  width: 100%;
}
.swiper-box swiper-item {
  border-radius:25rpx;
}

.swiper-box swiper-item image {
  height: 100%;
  width: 100%;
}

/* nav  */

.nav-box .nav {
  overflow: hidden;
  width: 1800rpx;
}

.nav-box .nav .item {
  float: left;
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  border: solid 2rpx #eee;
  text-align: center;
  margin-left: 20rpx;
  border-radius: 20rpx;
}

.nav-box .nav .item.current{
  color: #47b4dc;
}

/* goods */
.goods-list .item {
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: solid 2rpx #eee;
}

.goods-list .item .pic{
  width: 200rpx;
  height: 200rpx;
}
.goods-list .item .pic image {
  width: 200rpx;
  height: 200rpx;
}

.goods-list .item .content {
  margin-left: 20rpx;
}

.goods-list .item .content .title {
  height: 86rpx;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods-list .item .content .desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.goods-list .item .content .price{
  margin-top: 20rpx;
}
.goods-list .tip {
  text-align: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: #666;
}